{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - Francisco</title>
{% endblock %}

{% block content %}

<div id="perfil">
    <img src="{{ about.avatar }}" alt="Imagem de Francisco Rodrigues">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>{{ about.description }}</p>
</div>

<div class="footer">
    {% for link in about.links %}
        <a href="{{ link.url }}" target="blank">{{ link.name}}</a>
    {% endfor %}
</div>

{% endblock %}